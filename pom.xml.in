<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.zanata</groupId>
  <artifactId>null</artifactId>
  <version>@MVN_CLIENT_VER@</version>
  <properties>
      <zanata.srcDir>.</zanata.srcDir>
      <zanata.srcDirPot>pot</zanata.srcDirPot>
      <zanata.dstDir>.</zanata.dstDir>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.zanata</groupId>
        <artifactId>zanata-maven-plugin</artifactId>
	<version>@MVN_CLIENT_VER@</version>
	<configuration>
	    <srcDir>${zanata.srcDir}</srcDir>
	    <srcDirPot>${zanata.srcDirPot}</srcDirPot>
	    <transDir>${zanata.dstDir}</transDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <pluginRepositories>
    <pluginRepository>
	<id>snapshot-repository-zanata.forge.cloudbees.com</id>
	<name>snapshot-repository-zanata.forge.cloudbees.com</name>
      <url>http://repository-zanata.forge.cloudbees.com/snapshot/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
	<id>release-repository-zanata.forge.cloudbees.com</id>
	<name>release-repository-zanata.forge.cloudbees.com</name>
	<url>http://repository-zanata.forge.cloudbees.com/release/</url>
	<releases>
	    <enabled>true</enabled>
	</releases>
	<snapshots>
	    <enabled>true</enabled>
	</snapshots>
    </pluginRepository>
</pluginRepositories>
</project>
